        'description': 'Secure credential and persona storage'
    },
    'browser-spoof': {
        'script': 'tools/javascript/browser_fingerprint_spoofer.js',
        'interpreter': 'node',
        'description': 'Spoof browser fingerprint'
    },
    
    # System protection
    'mac-spoof': {
        'script': 'tools/perl/mac_spoofer.pl',
        'interpreter': 'perl',
        'description': 'Change MAC address'
    },
    'activity-monitor': {
        'script': 'modules/opsec/activity_monitor.py',
        'description': 'Monitor system for suspicious activity'
